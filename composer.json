{
    "name": "idimsh/phpunit-tests",
    "type": "library",
    "description": "PhpUnit tests additions, base classes and traits",
    "keywords": [
        "PHP",
        "idimsh",
        "phpunit-tests"
    ],
    "homepage": "https://github.com/idimsh/phpunit-tests",
    "license": "MIT",
    "authors": [
        {
            "name": "Abdulrahman Dimashki",
            "email": "idimsh@gmail.com",
            "homepage": "https://github.com/idimsh",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~7.1"
    },
    "require-dev": {
        "phpunit/phpunit" : "^9 || ^8 || ^7"
    },
    "autoload": {
        "psr-4": {
            "idimsh\\PhpUnitTests\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "idimsh\\PhpUnitTests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
